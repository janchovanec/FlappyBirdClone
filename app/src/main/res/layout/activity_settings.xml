<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SeekBar
        android:id="@+id/volumeBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toEndOf="@+id/volumeLbl"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.135"
        app:layout_constraintWidth_percent="0.7" />

    <TextView
        android:id="@+id/volumeLbl"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:text="Volume"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.135" />

    <TextView
        android:id="@+id/settingsLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.019" />

    <TextView
        android:id="@+id/settingsLbl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skin"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vibrationSwitch"
        app:layout_constraintVertical_bias="0.069" />

    <Switch
        android:id="@+id/vibrationSwitch"
        android:layout_width="166dp"
        android:layout_marginTop="28dp"
        android:text="Vibration"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/volumeLbl"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/flappySkin"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="User-selected image"
        android:scaleType="centerCrop"
        android:src="@drawable/flappybird"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/settingsLbl2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsLbl2"
        app:layout_constraintVertical_bias="0.057" />

    <ImageButton
        android:id="@+id/japanSkin"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="User-selected image"
        android:scaleType="centerCrop"
        android:src="@drawable/japan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/settingsLbl2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flappySkin"
        app:layout_constraintVertical_bias="0.081" />

    <ImageButton
        android:id="@+id/cowboySkin"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="User-selected image"
        android:scaleType="centerCrop"
        android:src="@drawable/cowboy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/settingsLbl2"
        app:layout_constraintTop_toBottomOf="@+id/settingsLbl2"
        app:layout_constraintVertical_bias="0.057" />

    <ImageButton
        android:id="@+id/customSkin"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="User-selected image"
        android:scaleType="centerCrop"
        android:src="@drawable/custom_skin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/settingsLbl2"
        app:layout_constraintTop_toBottomOf="@+id/cowboySkin"
        app:layout_constraintVertical_bias="0.081" />

    <Button
        android:id="@+id/cameraSkin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“· Custom skin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/japanSkin"
        app:layout_constraintVertical_bias="0.181" />

</androidx.constraintlayout.widget.ConstraintLayout>